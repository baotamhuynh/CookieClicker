<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@drawable/wood_pattern"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMainScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:background="#88000000"
                android:gravity="center_horizontal"
                android:text="0"
                android:textAllCaps="true"
                android:textSize="36sp" />

            <Button
                android:id="@+id/btIncrementClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:onClick="ClickMeButtonOnClick"
                android:text="Click Me!" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/border_background" />

            <TextView
                android:id="@+id/tvNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Normal" />

            <TextView
                android:id="@+id/tvNormalCount"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@id/tvNormal"
                android:layout_marginStart="12dp"
                android:textColor="@color/textColorSecondary"
                android:layout_marginTop="12dp"
                android:background="@drawable/back"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/tvNormalCalc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNormalCount"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="0/s" />

            <TextView
                android:id="@+id/tvSuper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Super" />

            <TextView
                android:id="@+id/tvSuperCount"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignBottom="@+id/tvDuperCount"
                android:layout_alignStart="@+id/tvMegaCount"
                android:background="@drawable/back"
                android:gravity="center"
                android:textColor="@color/textColorSecondary"
                android:text="0" />

            <TextView
                android:id="@+id/tvSuperCalc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSuperCount"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="0/s" />

            <TextView
                android:id="@+id/tvDuper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:text="Duper" />

            <TextView
                android:id="@+id/tvDuperCount"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tvDuper"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/textColorSecondary"
                android:background="@drawable/back"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/tvDuperCalc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tvDuperCount"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:text="0/s" />

            <TextView
                android:id="@+id/tvHyperCalc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="12dp"
                android:text="0/s" />

            <TextView
                android:id="@+id/tvHyperCount"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_above="@id/tvHyperCalc"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/textColorSecondary"
                android:background="@drawable/back"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/tvHyper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tvHyperCount"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="12dp"
                android:text="Hyper" />

            <TextView
                android:id="@+id/tvMegaCalc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:text="0/s" />

            <TextView
                android:id="@+id/tvMegaCount"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_above="@id/tvMegaCalc"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:textColor="@color/textColorSecondary"
                android:background="@drawable/back"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/tvMega"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tvMegaCount"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:text="Mega" />

            <TextView
                android:id="@+id/tvUltraCalc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="12dp"
                android:text="0/s" />

            <TextView
                android:id="@+id/tvUltraCount"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_above="@id/tvUltraCalc"
                android:layout_alignParentEnd="true"
                android:textColor="@color/textColorSecondary"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/back"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/tvUltra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tvUltraCount"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="12dp"
                android:text="Ultra" />

        </RelativeLayout>


    </LinearLayout>


    <View
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="@drawable/border_background" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bonuses"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btNormalBonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/buttonMargin"
            android:onClick="NormalBonusAdd"
            android:text="Bonus Normal" />

        <TextView
            android:id="@+id/tvNormalCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Cost: 5" />

        <Button
            android:id="@+id/btSuperBonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/buttonMargin"
            android:onClick="SuperBonusAdd"
            android:text="Bonus Super" />

        <TextView
            android:id="@+id/tvSuperCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Cost: 10" />

        <Button
            android:id="@+id/btDuperBonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/buttonMargin"
            android:onClick="DuperBonusAdd"
            android:text="Bonus Duper" />

        <TextView
            android:id="@+id/tvDuperCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Cost: 20" />

        <Button
            android:id="@+id/btHyperBonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/buttonMargin"
            android:onClick="HyperBonusAdd"
            android:text="Bonus Hyper" />

        <TextView
            android:id="@+id/tvHyperCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Cost: 35" />

        <Button
            android:id="@+id/btMegaBonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/buttonMargin"
            android:onClick="MegaBonusAdd"
            android:text="Bonus Mega" />

        <TextView
            android:id="@+id/tvMegaCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Cost: 55" />

        <Button
            android:id="@+id/btUltraBonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/buttonMargin"
            android:onClick="UltraBonusAdd"
            android:text="Bonus Ultra" />

        <TextView
            android:id="@+id/tvUltraCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Cost: 80" />

    </LinearLayout>
</LinearLayout>